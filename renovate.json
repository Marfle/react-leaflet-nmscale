{
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":disablePeerDependencies",
    ":semanticCommitTypeAll(chore)"
  ],
  "lockFileMaintenance": { "enabled": true },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "lockFileMaintenance"],
      "depTypeList": ["devDependencies", "dependencies"],
      "automerge": true
    }
  ]
}
